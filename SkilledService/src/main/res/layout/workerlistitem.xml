<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_workeritem"
    android:layout_height="wrap_content"
    android:background="@drawable/cricular_white_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/container_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/margin_xsmall"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_xsmall">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/worker_name"
            android:layout_width="@dimen/width_normal"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/worker_specialization"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/worker_ratings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingEnd="@dimen/margin_xsmall" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_rightarrow"
        android:layout_marginEnd="@dimen/margin_xsmall"
        android:layout_marginTop="@dimen/margin_xsmall"
        android:layout_marginBottom="@dimen/margin_xsmall"
        android:layout_gravity="center_vertical|right"/>
</LinearLayout>